@inject NavigationManager NavigationManager
<div @onclick="@(_ => {NavigationManager.NavigateTo("/Topic/"+Topic?.Id);})" class="card topic-card" style="margin-top: 5px; margin-bottom: 5px; cursor: pointer">
    <div>
        <div  style="display: inline-block;margin: 5px">
            <img style="border-radius: 64px; margin: auto" width="64px" height="64px" src="@(GlobalProperties.ApiUrl + "/User/Avatar/" + Topic?.UserId + ".jpg")"/>
        </div>
        <div style="display: inline-block">
            <div style="font-size: 16px">
                <span>@Topic.Name</span>
            </div>
            <div style="font-size: 10px">
                @Topic?.CreationDate?.ToString("dd:MM:yyyy hh:mm")
            </div>
        </div>
         <div  style="display: inline-block;margin: 5px; float: right">
         
             </div>
    </div>
</div>